    margin-top: 20px;
  }

  .avatar_img {
    width: 64px;
    height: 64px;
    border-radius: 1.14286e6px;
  }

  .wrap {
    margin-left: 20px;
  }

  .wrap_name {
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 22px;
    color: #000000;
  }

  .wrap_title {
    font-weight: 400;
    font-size: 14px;
    line-height: 17px;
