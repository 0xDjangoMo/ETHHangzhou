<section class="container">
  <div id="speaker" class="anchor"></div>
  <div class="title">Judges, Speakers & Mentors</div>
  <div class="card_container">
    {
      cardData.map((item) => {
        return (
          <div class="card_box">
            <div class="avatar">
              <img class="avatar_img" src={item.img} />
